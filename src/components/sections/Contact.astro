---
import Section from "@/components/Section.astro";
---

<Section className={Astro.props.className} title="Contact">
  <form
    name="contact"
    data-netlify="true"
    class="mx-auto max-w-2xl space-y-6 rounded-xl border border-white/10 bg-white/5 p-6 shadow-lg backdrop-blur-md"
  >
    <input type="hidden" name="form-name" value="contact" />

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="flex flex-col">
        <label for="name" class="mb-1 text-sm font-medium text-white"
          >Name</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="rounded-md border border-skin-hue/20 bg-white/10 px-3 py-2 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-skin-hue"
        />
      </div>
      <div class="flex flex-col">
        <label for="email" class="mb-1 text-sm font-medium text-white"
          >Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="rounded-md border border-skin-hue/20 bg-white/10 px-3 py-2 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-skin-hue"
        />
      </div>
    </div>

    <div class="flex flex-col">
      <label for="message" class="mb-1 text-sm font-medium text-white"
        >Message</label
      >
      <textarea
        id="message"
        name="message"
        rows="4"
        required
        class="rounded-md border border-skin-hue/20 bg-white/10 px-3 py-2 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-skin-hue"
      ></textarea>
    </div>

    <button
      type="submit"
      class="w-full rounded-md border border-solid border-skin-hue/20 bg-skin-button-accent/20 px-10 py-2 text-xs font-medium text-skin-hue transition hover:bg-skin-button-accent md:w-auto"
    >
      Send
    </button>
  </form>
</Section>

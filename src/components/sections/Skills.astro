---
import { Icon } from 'astro-icon/components';
import Section from '@/components/Section.astro';
import { getCV } from '@/i18n/utils';

const { skills } = getCV();
---

<Section className={Astro.props.className} title="Skills">
  <ul
    class="inline-flex flex-wrap gap-4 [&>li>svg]:text-skin-hue [&>li]:text-sm"
  >
    {
      skills.map(({ name, icon, level }) => {
        return (
          <li
            class="flex items-center gap-1 rounded-md border border-solid border-skin-hue/20 bg-skin-button-accent/20 px-1 py-0.5 text-xs text-skin-hue"
            title={level}
          >
            {icon && <Icon name={icon} width={16} height={16} />}
            <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>
